<script>
  function loadAdSenseScriptOnce() {
    if (typeof window === 'undefined') return;
    const existing = document.querySelector('script[src*="pagead/js/adsbygoogle.js"]');
    if (existing) return;

    const s = document.createElement('script');
    s.async = true;
    s.src = 'https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-4880646654838411';
    s.crossOrigin = 'anonymous';
    document.head.appendChild(s);
  }

  function pushAd(ad) {
    try {
      (window.adsbygoogle = window.adsbygoogle || []).push({});
      ad.setAttribute('data-adsbygoogle-status', ad.getAttribute('data-adsbygoogle-status') || 'requested');
    } catch (e) {
      // å¹¿å‘Šè¢«æ‹¦æˆª/æœªåŠ è½½æ—¶ä¸è¦å½±å“é¡µé¢æ¸²æŸ“
      console.warn('AdSense initialization failed:', e);
    }
  }

  function initVisibleAds() {
    if (typeof window === 'undefined') return;
    const ads = Array.from(document.querySelectorAll('.adsbygoogle'));
    if (ads.length === 0) return;

    loadAdSenseScriptOnce();

    const schedule = (fn) => {
      if (typeof requestIdleCallback === 'function') requestIdleCallback(fn, { timeout: 1500 });
      else setTimeout(fn, 1);
    };

    // è¿›å…¥è§†å£å†åˆå§‹åŒ–ï¼Œå‡å°‘é¦–å±å¼€é”€
    if ('IntersectionObserver' in window) {
      const io = new IntersectionObserver((entries) => {
        for (const entry of entries) {
          if (!entry.isIntersecting) continue;
          const ad = entry.target;
          if (!ad.hasAttribute('data-adsbygoogle-status')) {
            schedule(() => pushAd(ad));
          }
          io.unobserve(ad);
        }
      }, { rootMargin: '200px 0px' });

      ads.forEach((ad) => io.observe(ad));
      return;
    }

    // è€æµè§ˆå™¨å…œåº•ï¼šç©ºé—²æ—¶åˆå§‹åŒ–
    schedule(() => {
      ads.forEach((ad) => {
        if (!ad.hasAttribute('data-adsbygoogle-status')) pushAd(ad);
      });
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initVisibleAds, { once: true });
  } else {
    initVisibleAds();
  }

  document.addEventListener('astro:page-load', initVisibleAds);
</script>
