---
import Base from '../../layouts/Base.astro';
import { tools, categories } from '../../data/tools';

export function getStaticPaths() {
  return categories.map((category) => {
    const categoryTools = tools.filter(tool => tool.category === category.id);
    return {
      params: { category: category.id },
      props: { category, categoryTools }
    };
  });
}

const { category, categoryTools } = Astro.props;
---

<Base
  title={`${category.name} Tools | OumaShu`}
  description={`Discover ${categoryTools.length} ${category.name.toLowerCase()} tools to boost your productivity. ${category.description}`}
  keywords={`${category.name}, tools, productivity, online tools, ${categoryTools.map(t => t.name).join(', ')}`}
>
  <div class="min-h-screen bg-gray-50 dark:bg-black">
    <!-- Header -->
    <header class="bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-700">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <a href="/" class="inline-flex items-center text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white mb-4">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Home
        </a>
        <div class="flex items-center space-x-4">
          <img src={category.icon} alt={category.name} class="w-16 h-16 object-contain" />
          <div>
            <h1 class="text-4xl font-bold text-gray-900 dark:text-white">{category.name}</h1>
            <p class="text-lg text-gray-600 dark:text-gray-400 mt-2">{category.description}</p>
          </div>
        </div>
      </div>
    </header>

    <!-- Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Introduction -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
          About {category.name} Tools
        </h2>
        <div class="prose dark:prose-invert max-w-none">
          <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
            Welcome to our collection of {category.name.toLowerCase()} tools! We've carefully curated 
            {categoryTools.length} powerful tools to help you with your {category.name.toLowerCase()} needs. 
            Whether you're a beginner or an expert, these tools will enhance your productivity and make 
            your work easier.
          </p>
        </div>
      </section>

      <!-- Tools Grid -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          All {category.name} Tools ({categoryTools.length})
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {categoryTools.map((tool) => (
            <article class="bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-700 p-6 hover:shadow-lg transition-shadow">
              <div class="flex items-start justify-between mb-4">
                <span class="text-3xl">{tool.icon || 'üîó'}</span>
                {tool.thirdParty && (
                  <span class="bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 text-xs px-2 py-1 rounded-full">
                    Third-party
                  </span>
                )}
              </div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
                {tool.name}
              </h3>
              <p class="text-gray-600 dark:text-gray-400 text-sm mb-4 line-clamp-3">
                {tool.description}
              </p>
              <div class="flex flex-wrap gap-2 mb-4">
                {tool.tags.slice(0, 3).map((tag) => (
                  <span class="bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 text-xs px-2 py-1 rounded">
                    {tag}
                  </span>
                ))}
              </div>
              <a
                href={tool.url}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center text-sakura-600 dark:text-sakura-400 hover:text-sakura-700 dark:hover:text-sakura-300 font-medium"
              >
                Visit Tool
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              </a>
            </article>
          ))}
        </div>
      </section>

      <!-- Why Use These Tools -->
      <section class="bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-700 p-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
          Why Use Our {category.name} Tools?
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2 flex items-center">
              <span class="text-2xl mr-2">‚ö°</span>
              Fast & Efficient
            </h3>
            <p class="text-gray-600 dark:text-gray-400">
              All tools are optimized for speed and performance, helping you complete tasks quickly.
            </p>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2 flex items-center">
              <span class="text-2xl mr-2">üîí</span>
              Privacy Focused
            </h3>
            <p class="text-gray-600 dark:text-gray-400">
              Most tools process data locally in your browser, ensuring your privacy and security.
            </p>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2 flex items-center">
              <span class="text-2xl mr-2">üíØ</span>
              Free to Use
            </h3>
            <p class="text-gray-600 dark:text-gray-400">
              All tools in our collection are completely free with no hidden costs or subscriptions.
            </p>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2 flex items-center">
              <span class="text-2xl mr-2">üåê</span>
              No Installation
            </h3>
            <p class="text-gray-600 dark:text-gray-400">
              Access all tools directly in your browser without downloading or installing anything.
            </p>
          </div>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <footer class="bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700 mt-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <p class="text-center text-gray-600 dark:text-gray-400">
          ¬© 2024 OumaShu. All rights reserved.
        </p>
      </div>
    </footer>
  </div>
</Base>

